@model IEnumerable<Leaderboard_JEI.Models.Perfil>

@{
    ViewData["Title"] = "ListPerfis";
}

<h1>Pontuação da noite</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            
            <th>
                <h6>K's</h6>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Pontos)
            </td>
            
        </tr>
}
    </tbody>
</table>
